{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "module": "commonjs",
        "jsx": "react",
        "outDir": "./dist/",
        "noEmitOnError": true,
        "lib": ["es6", "dom"]
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ],
    "exclude": [
        "./node_modules",
        "./gulpfile.ts",
        "./build"
    ]
}